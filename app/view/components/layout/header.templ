package components 

css header() {
	height: 60px;
	width: 100%;
	display: fixed;
}

css headerContent() {
	display: flex;
	flex-direction: row;
	width: 100%;
	height: 100%;
}

css headerCol() {
	display: flex;
	flex: 1;
	height: 100%;
}

templ Header(title string) {
	<div class={ header() }>
		<div class={ headerContent() }>
			<div class={ headerCol() }>
				{ title }
			</div>
			<div class={ headerCol() }>
				2
			</div>
		</div>
	</div>
}
